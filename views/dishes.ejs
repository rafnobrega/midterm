<!DOCTYPE html>
<html lang="en">

<head>
  <title>Menu</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/dishes.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <nav>
    <%- include('partials/_header.ejs') %>
  </nav>

  <h1>Our Menu</h1>


  <!-- MENU ITEMS GRID - LOOP -->
  <ul class="menu-items">
    <% for (let obj of menu) { %>

      <!-- EACH ITEM -->
      <li class="menu-item">
        <div class="dish-title">
          <%= obj.title %>
        </div>
        <div>
          <img class="dish-thumbnail" src="<%= obj.thumbnail_photo %>" />
        </div>
        <div class="dish-description">
          <%= obj.description %>
        </div>
        <div class="price-and-button-wrp">
          <!-- PRICE -->
          <div class="item-price <%= obj.id %>">
            $<%= Math.floor(obj.price / 100).toFixed(2) %>
            <!-- QUANTITY -->
          </div class="menu-item-button">
          <input type="number" class="item-quantity <%= obj.id %>" name="item-quantity" min="0" max="12" value="0">
          <button type="submit" class="add-to-order <%= obj.id %>" >Add to order</button>
        </div>
      </li>
      <% } %>
  </ul>
<!-- PLACE ORDER (IN THE BOTTOM OF THE PAGE) -->
  </div>
  <div class="place-my-order">
    <span>Subtotal:</span>
    <p class="place-my-order-subtotal" value="1000">$</p>
    <form method="POST" action="/cart">
      <button id="place-my-order-button" class="btn btn-primary" type="submit" value="submit">Place my order!</button>
  </div>
  </form>
</body>
</html>
