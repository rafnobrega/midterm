<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/styles/summary.css" type="text/css" />
</head>

<body>
  <nav>
    <%- include('partials/_header.ejs') %>
  </nav>
  <div class="welcome-wrapper">
    <div class="welcome-user">
      <p>Welcome <%= users[0].name %>
      </p>
    </div>
    <div class="welcome-order">
      <p>order number <%= users[0].order_id %>
      </p>
    </div>
  </div>
  <h2>Order summary</h2>
  <!-- user order summary table -->
  <div class="table">
    <div class="items">
      <p>Name of the dishes</p>
      <p>
        <% for(let user of users) { %>
          <hr>
          <%= user.title %>
            <% } %>
      <hr class="total"><p>Subtotal</p></p>
      <p>Tax</p>
      <p><b>Total</b></p>
    </div>
    <div class="prices">
      <p>Prices</p>
      <p>
        <% for(let user of users) { %>
          <hr>
          <%= user.price %>
            <% } %>
    </div>
    <div class="quantity">
      <p>quantity</p>
      <p>
        <% for(let user of users) { %>
          <hr>
          <%= user.quantity %>
            <% } %>
    </div>
    <div class="amount">
      <p>Total price</p>
      <p>
        <% for(let user of users) { %>
          <hr>
          <%= user.amount %>
            <% } %>
            <hr class="total">
            <p>5000
            </p>
            </p>
            

    </div>
  </div>
</body>

</html>